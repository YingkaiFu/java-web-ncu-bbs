<!--获取最热问题、显示作者和答案数-->
    <select id="getHostQuestion" resultMap="AllResultMap">
        select question.id as q_id,question.create_time as q_time,question.description,
        question.title,question.click_num,count(answer.id) as answer_num,
        user_profile.id as author_id,user_profile.nickname,user_profile.avatar
        from question,user_profile,answer,user_account
        where question.author_id = user_account.id and question.id = answer.question_id
        and user_account.id = user_profile.user_account_id
        group by question.id
        order by click_num desc
    </select>
    <!--获取最新问题、显示作者和答案数-->
    <select id="getLatestQuestion" resultMap="AllResultMap">
        select question.id as q_id,question.create_time as q_time,question.description,
        question.title,question.click_num,count(answer.id) as answer_num,
        user_profile.id as author_id,user_profile.nickname,user_profile.avatar
        from question,user_profile,answer,user_account
        where question.author_id = user_account.id and question.id = answer.question_id
        and user_account.id = user_profile.user_account_id
        group by question_id
        order by question.create_time desc
    </select>
    <!--获取指定id的问题、作者和答案-->
    <select id="getQuestionById" resultMap="SingleResultMap">
        select user1.id as q_author_id,user1.nickname as q_nickname,user1.avatar as q_avater,
        question.id as q_id,question.title,question.create_time as q_time,question.description,
        question.click_num,answer.*,
        user2.id as a_author_id,user2.nickname as a_nickname,user2.avatar as a_avater
        from question,answer,user_profile user1,user_profile user2,user_account account1,user_account account2
        where question.id=#{id} and
        question.author_id = account1.id and
        account1.id = user1.user_account_id and
        answer.question_id = question.id and
        answer.author_id = account2.id and
        account2.id = user2.user_account_id
    </select>
