    <!--查询某一用户所有动弹-->
    <select id="getTweetsByUser" resultMap="TweetResultMap">
    select user_profile.id as author_id, user_profile.nickname,user_profile.avatar,
    tweet.* from user_profile,tweet,user_account
    where user_account.id = #{id} and user_account.id = user_profile.user_account_id
    and user_account.id = tweet.author_id
    </select>
    <!--查询某一用户所有提问-->
    <select id="getQuestionsByUser" resultMap="QuestionResultMap">
        select user_profile.id as author_id,user_profile.avatar,user_profile.nickname,question.*
        from user_profile,question,user_account
        where
        user_account.id = #{id} and user_account.id = user_profile.user_account_id
        and question.author_id = user_account.id
    </select>

    <!--查询某一用户的所有回答-->
    <select id="getAnswersByUser" resultMap="AnswerResultMap">
        select user1.id as user_id,user1.nickname,user1.avatar,answer.*,
        question.id as q_id, question.title,question.create_time as q_time,
        question.description,user2.id as author_id,
        user2.nickname as author_nickname,user2.avatar as author_avatar
        from user_profile user1,user_profile user2,user_account account1,
        user_account account2,answer,question
        where account1.id = #{id} and
        account1.id = user1.user_account_id and
        account1.id = answer.author_id and
        answer.question_id = question.id and
        question.author_id = account2.id and
        account2.id = user2.id

    </select>

